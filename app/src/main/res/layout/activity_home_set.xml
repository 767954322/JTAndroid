<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_ed">

    <include
        android:id="@+id/common_navbar"
        layout="@layout/view_navigation_header" />

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/common_navbar"
        android:background="@color/bg_f9">

        <RelativeLayout
            android:id="@+id/rl_set_dingyue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_55">

            <TextView
                android:id="@+id/tv_dingyue_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_20"
                android:text="微信订阅号"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_16" />

            <TextView
                android:id="@+id/tv_dingyue_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_15"
                android:text="家图互动" />
        </RelativeLayout>

        <View
            android:id="@+id/view_center_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_1"
            android:layout_below="@+id/rl_set_dingyue"
            android:layout_marginLeft="@dimen/font_15"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rl_set_banben"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_55"
            android:layout_below="@+id/view_center_two">

            <TextView
                android:id="@+id/tv_banben_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_20"
                android:text="版本号"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_16" />

            <TextView
                android:id="@+id/tv_banben_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_15"
                android:text="v3.0.4" />
        </RelativeLayout>

        <View
            android:id="@+id/view_center_three"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_1"
            android:layout_below="@+id/rl_set_banben"
            android:layout_marginLeft="@dimen/font_15"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rl_set_clear_cash"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_55"
            android:layout_below="@+id/view_center_three">

            <TextView
                android:id="@+id/tv_clear_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_20"
                android:text="清除缓存"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_16" />

            <TextView
                android:id="@+id/tv_clear_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_20"
                android:text="0.0M"
                android:textColor="@color/textColor_actionsheet_title"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top"
        android:layout_marginTop="@dimen/font_10"
        android:background="@color/bg_f9">

        <RelativeLayout
            android:id="@+id/rl_set_fankui"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_55">

            <TextView
                android:id="@+id/tv_fankui_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_20"
                android:text="使用反馈"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_16" />

            <ImageView
                android:id="@+id/iv_fankui_set_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_15"
                android:src="@drawable/next" />
        </RelativeLayout>

        <View
            android:id="@+id/view_center_four"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_1"
            android:layout_below="@+id/rl_set_fankui"
            android:layout_marginLeft="@dimen/font_15"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rl_set_pingjia"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_55"
            android:layout_below="@+id/view_center_four"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_pinfjia_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_20"
                android:text="给我们评价一下吧O(∩_∩)O"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_16" />

            <ImageView
                android:id="@+id/iv_pingjia_set_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_15"
                android:src="@drawable/next" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_outlogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_40"
        android:layout_below="@+id/rl_below"
        android:layout_marginLeft="@dimen/font_20"
        android:layout_marginRight="@dimen/font_20"
        android:layout_marginTop="@dimen/font_40"
        android:background="@drawable/bt_login"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/font_17"
        android:textStyle="bold" />

</RelativeLayout>