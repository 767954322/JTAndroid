<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/common_navbar"
        layout="@layout/view_navigation_header" />

    <ScrollView
        android:id="@+id/sv_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/common_navbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants">
            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_top" />

                <ImageView
                    android:id="@+id/iv_header_desiner_center"
                    android:layout_width="@dimen/font_90"
                    android:layout_height="@dimen/font_90"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/tv_name_desiner_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/font_15"
                    android:textColor="@color/case_text_tital_name"
                    android:textSize="@dimen/size_17"
                    android:textStyle="bold" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_desiner_center_tital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_top"
                android:layout_marginTop="@dimen/font_15"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_desiner_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/test2"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_desiner_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/font_3"
                    android:layout_toRightOf="@+id/iv_desiner_location"
                    android:textColor="@color/bg_707070"
                    android:textSize="@dimen/size_14"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_desinercenter_center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_10"
                android:layout_below="@+id/rl_desiner_center_tital"
                android:layout_marginTop="@dimen/font_20"
                android:background="@color/bg_f2f2f2" />

            <TextView
                android:id="@+id/tv_tital_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_desinercenter_center"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_marginTop="@dimen/font_25"
                android:text="收费标准"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_17" />

            <LinearLayout
                android:id="@+id/ll_desiner_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tital_price"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_marginTop="@dimen/font_17"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_info_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150-300"
                    android:textColor="@color/bg_707070"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_info_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="       (详情请咨询设计师)"
                    android:textColor="@color/bg_707070"
                    android:textSize="@dimen/size_14" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_tital_biaozun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_desiner_price"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_marginTop="@dimen/font_25"
                android:text="详细收费标准"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_17" />

            <TextView
                android:id="@+id/tv_info_biaozun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tital_biaozun"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_marginRight="@dimen/font_20"
                android:layout_marginTop="@dimen/font_15"
                android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
                android:textColor="@color/bg_707070"
                android:textSize="@dimen/size_14" />


            <View
                android:id="@+id/view_line_desinerinfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_1"
                android:layout_below="@+id/tv_info_biaozun"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_marginRight="@dimen/font_20"
                android:layout_marginTop="@dimen/font_30"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tv_tital_xiangmu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line_desinerinfo"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_marginTop="@dimen/font_30"
                android:text="服务项目"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_17" />


            <TextView
                android:id="@+id/tv_info_xiangmu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tital_xiangmu"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_marginRight="@dimen/font_20"
                android:layout_marginTop="@dimen/font_17"
                android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
                android:textColor="@color/bg_707070"
                android:textSize="@dimen/size_14" />


            <TextView
                android:id="@+id/tv_tital_quyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_info_xiangmu"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_marginTop="@dimen/font_30"
                android:text="服务区域"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_17" />

            <TextView
                android:id="@+id/tv_info_quyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tital_quyu"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_marginRight="@dimen/font_20"
                android:layout_marginTop="@dimen/font_17"
                android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
                android:textColor="@color/bg_707070"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/tv_tital_liucheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_info_quyu"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_marginTop="@dimen/font_30"
                android:text="服务流程"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_17" />

            <TextView
                android:id="@+id/tv_info_liucheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tital_liucheng"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_marginRight="@dimen/font_20"
                android:layout_marginTop="@dimen/font_17"
                android:lineSpacingExtra="@dimen/font_8"
                android:textColor="@color/bg_707070"
                android:textSize="@dimen/size_14" />

            <View
                android:id="@+id/view_line_desinerinfo_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_1"
                android:layout_below="@+id/tv_info_liucheng"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_marginRight="@dimen/font_20"
                android:layout_marginTop="@dimen/font_30"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tv_tital_guanyuwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line_desinerinfo_two"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_marginTop="@dimen/font_30"
                android:text="关于我"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_17" />

            <TextView
                android:id="@+id/tv_info_guanyuwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tital_guanyuwo"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_marginRight="@dimen/font_20"
                android:layout_marginTop="@dimen/font_17"
                android:lineSpacingExtra="@dimen/font_8"
                android:textColor="@color/bg_707070"
                android:textSize="@dimen/size_14" />

            <View
                android:id="@+id/view_line_desinerinfo_three"
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_1"
                android:layout_below="@+id/tv_info_guanyuwo"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_marginRight="@dimen/font_20"
                android:layout_marginTop="@dimen/font_30"
                android:background="@color/view_line" />


            <TextView
                android:id="@+id/tv_tital_lianxifangshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line_desinerinfo_three"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_marginTop="@dimen/font_30"
                android:text="联系方式"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_17" />

            <RelativeLayout
                android:id="@+id/rl_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tital_lianxifangshi"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginTop="@dimen/font_20">

                <ImageView
                    android:id="@+id/desiner_icro_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dianhua" />

                <TextView
                    android:id="@+id/tv_lianxi_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/font_7"
                    android:layout_toRightOf="@+id/desiner_icro_one"
                    android:layout_centerVertical="true"
                    android:textColor="@color/bg_707070"
                    android:textSize="@dimen/size_14" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_one"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginTop="@dimen/font_20">

                <ImageView
                    android:id="@+id/desiner_icro_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/mail" />

                <TextView
                    android:id="@+id/tv_lianxi_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/font_7"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/desiner_icro_two"
                    android:text="767954322@qq.com"
                    android:textColor="@color/bg_707070"
                    android:textSize="@dimen/size_14" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_two"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginTop="@dimen/font_20">

                <ImageView
                    android:id="@+id/desiner_icro_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/zhuye" />

                <TextView
                    android:id="@+id/tv_lianxi_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/font_7"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/desiner_icro_three"
                    android:text="www.baidu.com"
                    android:textColor="@color/bg_707070"
                    android:textSize="@dimen/size_14" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_three"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginTop="@dimen/font_20">

                <ImageView
                    android:id="@+id/desiner_icro_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/weixinn" />

                <TextView
                    android:id="@+id/tv_lianxi_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/font_7"
                    android:layout_toRightOf="@+id/desiner_icro_four"
                    android:text="767954322"
                    android:layout_centerVertical="true"
                    android:textColor="@color/bg_707070"
                    android:textSize="@dimen/size_14" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_four"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginTop="@dimen/font_20">

                <ImageView
                    android:id="@+id/desiner_icro_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/qqq" />

                <TextView
                    android:id="@+id/tv_lianxi_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/font_7"
                    android:layout_toRightOf="@+id/desiner_icro_five"
                    android:text="767954322"
                    android:layout_centerVertical="true"
                    android:textColor="@color/bg_707070"
                    android:textSize="@dimen/size_14" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_five"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginTop="@dimen/font_20">

                <ImageView
                    android:id="@+id/desiner_icro_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dizhi" />

                <TextView
                    android:id="@+id/tv_lianxi_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/font_7"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/desiner_icro_six"
                    android:text="北京.朝阳"
                    android:textColor="@color/bg_707070"
                    android:textSize="@dimen/size_14" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_90"
                android:layout_below="@+id/rl_six" />

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_65"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/font_10"
        android:layout_marginLeft="@dimen/font_10"
        android:layout_marginRight="@dimen/font_10"
        android:background="@drawable/bar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_zhuye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/font_20"
                    android:layout_marginRight="@dimen/font_61"
                    android:gravity="center"
                    android:text="电话"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_zhuye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/font_22"
                    android:layout_marginRight="@dimen/font_8"
                    android:layout_toLeftOf="@+id/tv_zhuye"
                    android:src="@drawable/phone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_chat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/font_22"
                    android:layout_marginLeft="@dimen/font_61"
                    android:src="@drawable/chart_icon" />

                <TextView
                    android:id="@+id/tv_chart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/font_20"
                    android:layout_marginLeft="@dimen/font_8"
                    android:layout_toRightOf="@+id/iv_chat"
                    android:gravity="center"
                    android:text="咨询"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/font_42"
            android:layout_height="@dimen/font_42"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/font_3"
            android:src="@drawable/ic_default_head" />
    </RelativeLayout>

</RelativeLayout>
