<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.homechart.app.scrolllistview.PullToRefreshView
        android:id="@+id/main_pull_refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.homechart.app.home.ui.MyScrollView
            android:id="@+id/sv_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants">

                <RelativeLayout
                    android:id="@+id/rl_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        android:src="@drawable/background_top" />

                    <ImageView
                        android:id="@+id/iv_header_desiner_center"
                        android:layout_width="@dimen/font_90"
                        android:layout_height="@dimen/font_90"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_default_head" />

                    <ImageView
                        android:id="@+id/iv_renzheng"
                        android:layout_width="@dimen/font_25"
                        android:layout_height="@dimen/font_25"
                        android:layout_alignRight="@+id/iv_header_desiner_center"
                        android:layout_below="@+id/iv_header_desiner_center"
                        android:layout_marginTop="@dimen/font_48"
                        android:src="@drawable/renzheng"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_name_desiner_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/font_15"
                        android:textColor="@color/case_text_tital_name"
                        android:textSize="@dimen/size_17"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_desiner_center_tital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_top"
                    android:layout_marginTop="@dimen/font_5"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_desiner_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/test2"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_desiner_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/font_3"
                        android:layout_toRightOf="@+id/iv_desiner_location"
                        android:textColor="@color/bg_707070"
                        android:textSize="@dimen/size_14"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/tv_desiner_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/font_20"
                        android:layout_toRightOf="@+id/tv_desiner_location"
                        android:textColor="@color/bg_ed8e00"
                        android:textSize="@dimen/size_14"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_desiner_price_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/font_20"
                        android:layout_toRightOf="@+id/tv_desiner_location"
                        android:text="价格面议"
                        android:textColor="@color/bg_707070"
                        android:textSize="@dimen/size_14"
                        android:visibility="gone" />

                </RelativeLayout>


                <View
                    android:id="@+id/view_desiner_line"
                    android:layout_width="@dimen/font_20"
                    android:layout_height="@dimen/font_1"
                    android:layout_below="@+id/rl_desiner_center_tital"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/font_15"
                    android:background="@color/bg_707070" />

                <RelativeLayout
                    android:id="@+id/rl_desinercenter_into_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_desiner_line"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/font_15">

                    <TextView
                        android:id="@+id/tv_desinercenter_into_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="完整服务信息"
                        android:textColor="@color/bg_8f8f8f"
                        android:textSize="@dimen/size_13" />

                    <ImageView
                        android:layout_width="@dimen/size_10"
                        android:layout_height="@dimen/size_10"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/font_10"
                        android:layout_toRightOf="@+id/tv_desinercenter_into_detail"
                        android:src="@drawable/next" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_desinercenter_center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/font_10"
                    android:layout_below="@+id/rl_desinercenter_into_detail"
                    android:layout_marginTop="@dimen/font_20"
                    android:background="@color/bg_f2f2f2" />


                <RelativeLayout
                    android:id="@+id/rl_desiner_center_casetital"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/font_49"
                    android:layout_below="@+id/rl_desinercenter_center">


                    <TextView
                        android:id="@+id/tv_desinercenter_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="我的服务案例（0）"
                        android:textColor="@color/case_text_tital_name"
                        android:textSize="@dimen/size_15" />

                </RelativeLayout>

                <View
                    android:id="@+id/view_center_desiner_below"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/rl_desiner_center_casetital"
                    android:background="@color/bg_ededed" />


                <com.homechart.app.scrolllistview.MyListView
                    android:id="@+id/slv_desinercenter_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_center_desiner_below"
                    android:layout_marginTop="@dimen/font_20"
                    android:divider="@null" />

                <View
                    android:id="@+id/view_bettom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/font_70"
                    android:layout_below="@+id/slv_desinercenter_listview" />

            </RelativeLayout>
        </com.homechart.app.home.ui.MyScrollView>


    </com.homechart.app.scrolllistview.PullToRefreshView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_65"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/font_10"
        android:layout_marginLeft="@dimen/font_10"
        android:layout_marginRight="@dimen/font_10"
        android:background="@drawable/bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_zhuye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/font_20"
                    android:layout_marginRight="@dimen/font_61"
                    android:gravity="center"
                    android:text="电话"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_zhuye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/font_22"
                    android:layout_marginRight="@dimen/font_8"
                    android:layout_toLeftOf="@+id/tv_zhuye"
                    android:src="@drawable/phone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_chat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/font_22"
                    android:layout_marginLeft="@dimen/font_61"
                    android:src="@drawable/chart_icon" />

                <TextView
                    android:id="@+id/tv_chart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/font_20"
                    android:layout_marginLeft="@dimen/font_8"
                    android:layout_toRightOf="@+id/iv_chat"
                    android:gravity="center"
                    android:text="咨询"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/font_42"
            android:layout_height="@dimen/font_42"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/font_3"
            android:src="@drawable/ic_default_head" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/common_navbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white1"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/backButton_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/nav_left_imageButton"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/size_10"
                android:background="@drawable/transparent"
                android:padding="@dimen/size_8"
                android:scaleType="centerInside"
                android:src="@drawable/tital_back_wight"
                android:visibility="visible" />

            <TextView
                android:id="@+id/nav_left_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_17"
                android:visibility="gone" />
        </RelativeLayout>


        <ImageButton
            android:id="@+id/nav_secondary_imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/transparent"
            android:padding="@dimen/size_8"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_tital_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/case_text_tital_name"
            android:textSize="@dimen/font_18" />

    </RelativeLayout>
</RelativeLayout>
