<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_ed">

    <include
        android:id="@+id/common_navbar"
        layout="@layout/view_navigation_header" />

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_120"
        android:layout_below="@+id/common_navbar"
        android:background="@color/bg_f9"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_persion_touxiang"
            android:layout_width="@dimen/font_70"
            android:layout_height="@dimen/font_70"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_20" />

        <TextView
            android:id="@+id/tv_center_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_15"
            android:layout_toRightOf="@+id/iv_persion_touxiang"
            android:textColor="@color/case_text_tital_name"
            android:textSize="@dimen/size_17"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/center_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header"
        android:layout_marginTop="@dimen/font_10"
        android:background="@color/bg_f9">

        <RelativeLayout
            android:id="@+id/rl_center_chart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_55">

            <ImageView
                android:id="@+id/iv_center_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_15"
                android:src="@drawable/jilu" />

            <TextView
                android:id="@+id/tv_tital_chat_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_toRightOf="@+id/iv_center_chart"
                android:text="咨询记录"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_16" />

            <TextView
                android:id="@+id/tv_chat_new_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/chat_news"
                android:paddingBottom="@dimen/size_5"
                android:paddingLeft="@dimen/size_17"
                android:paddingRight="@dimen/size_17"
                android:textSize="@dimen/font_12"
                android:paddingTop="@dimen/size_5"
                android:text="新消息"
                android:textColor="@color/bg_ff4444"
                android:layout_marginLeft="@dimen/font_5"
                android:visibility="gone"
                android:layout_toRightOf="@+id/tv_tital_chat_list"/>


            <ImageView
                android:id="@+id/iv_center_chart_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_15"
                android:src="@drawable/next" />

            <TextView
                android:id="@+id/tv_center_chart_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_15"
                android:layout_toLeftOf="@+id/iv_center_chart_next"
                android:text="-1"
                android:textColor="@color/bgColor_overlay"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>

        <View
            android:id="@+id/view_center_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_1"
            android:layout_below="@+id/rl_center_chart"
            android:layout_marginLeft="@dimen/font_15"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rl_center_service"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_55"
            android:layout_below="@+id/view_center_two">

            <ImageView
                android:id="@+id/iv_center_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_15"
                android:src="@drawable/wodeanli" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_20"
                android:layout_toRightOf="@+id/iv_center_service"
                android:text="我的服务案例"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_16" />


            <ImageView
                android:id="@+id/iv_center_service_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_15"
                android:src="@drawable/next" />

            <TextView
                android:id="@+id/tv_center_service_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_15"
                android:layout_toLeftOf="@+id/iv_center_service_next"
                android:text="0"
                android:textColor="@color/bgColor_overlay"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_center_shezhi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_55"
        android:layout_below="@+id/center_center"
        android:layout_marginTop="@dimen/font_10"
        android:background="@color/bg_f9">

        <ImageView
            android:id="@+id/iv_center_shezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_15"
            android:src="@drawable/set" />

        <TextView
            android:id="@+id/tv_shezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_20"
            android:layout_toRightOf="@+id/iv_center_shezhi"
            android:text="设置"
            android:textColor="@color/case_text_tital_name"
            android:textSize="@dimen/size_16" />

        <ImageView
            android:id="@+id/iv_center_set_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/font_15"
            android:src="@drawable/next" />
    </RelativeLayout>

</RelativeLayout>