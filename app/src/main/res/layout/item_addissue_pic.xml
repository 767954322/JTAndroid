<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/font_75"
    android:layout_height="@dimen/font_75">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_issue_add_pic"
        android:layout_width="@dimen/font_75"
        android:layout_height="@dimen/font_75"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/addpic"
        fresco:actualImageScaleType="centerCrop"
        fresco:fadeDuration="300"
        fresco:failureImageScaleType="centerCrop"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:progressBarAutoRotateInterval="1000"
        fresco:progressBarImageScaleType="centerCrop"
        fresco:retryImageScaleType="centerCrop" />


    <ImageView
        android:id="@+id/iv_issue_delete_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/delete" />

</RelativeLayout>
