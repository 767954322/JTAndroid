<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_80">

        <ImageView
            android:id="@+id/iv_person_header"
            android:layout_width="@dimen/font_50"
            android:layout_height="@dimen/font_50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_20" />

        <TextView
            android:id="@+id/tv_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginTop="@dimen/size_20"
            android:layout_toRightOf="@+id/iv_person_header"
            android:textColor="@color/case_text_tital_name"
            android:textSize="@dimen/size_17"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_person_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_18"
            android:layout_marginLeft="@dimen/font_15"
            android:layout_marginRight="@dimen/size_15"
            android:layout_toRightOf="@+id/iv_person_header"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/bg_707070"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/tv_person_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_15"
            android:layout_marginTop="@dimen/size_20"
            android:textColor="@color/bg_eb2b2b2"
            android:textSize="@dimen/size_12" />

        <cn.bingoogolapple.badgeview.BGABadgeTextView
            android:id="@+id/tv_unreader_icon"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:layout_alignBottom="@+id/tv_person_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/font_15"
            android:text=""
            android:textSize="@dimen/size_13"
            android:visibility="gone" />

    </RelativeLayout>


</RelativeLayout>
